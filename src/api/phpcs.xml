<?xml version="1.0"?>
<ruleset name="Custom PSR-12 Standard">
    <description>PSR-12 coding standard for Consumption API</description>

    <!-- Display progress during scan -->
    <arg value="p"/>
    <!-- Use colors in output -->
    <arg name="colors"/>
    <!-- Show sniff names in report -->
    <arg value="s"/>

    <!-- Inherit PSR-12 standard -->
    <rule ref="PSR12"/>

    <!-- Paths to scan -->
    <file>app</file>
    <file>configs</file>
    <file>constants</file>
    <file>scripts</file>
    <file>test</file>

    <!-- Exclude vendor directory -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
</ruleset>
